get_filename_component(myDir ${CMAKE_CURRENT_LIST_FILE} PATH) # get the directory where I myself am
get_filename_component(rootDir ${myDir}/@relInstallDir@ ABSOLUTE) # get the chosen install prefix

# set the version of myself
set(KACTIVITIES_ITEMMODELS_VERSION_MAJOR @KACTIVITIES_ITEMMODELS_LIB_MAJOR_VERSION@)
set(KACTIVITIES_ITEMMODELS_VERSION_MINOR @KACTIVITIES_ITEMMODELS_LIB_MINOR_VERSION@)
set(KACTIVITIES_ITEMMODELS_VERSION_PATCH @KACTIVITIES_ITEMMODELS_LIB_PATCH_VERSION@)
set(KACTIVITIES_ITEMMODELS_VERSION @KACTIVITIES_ITEMMODELS_LIB_MAJOR_VERSION@.@KACTIVITIES_ITEMMODELS_LIB_MINOR_VERSION@.@KACTIVITIES_ITEMMODELS_LIB_PATCH_VERSION@)
set(KACTIVITIES_ITEMMODELS_VERSION_STRING "@KACTIVITIES_ITEMMODELS_LIB_MAJOR_VERSION@.@KACTIVITIES_ITEMMODELS_LIB_MINOR_VERSION@.@KACTIVITIES_ITEMMODELS_LIB_PATCH_VERSION@")

# what is my include directory
# we have _DIRS for compat with existing usage
SET(KACTIVITIES_ITEMMODELS_INCLUDE_DIRS "@INCLUDE_INSTALL_DIR@" "@INCLUDE_INSTALL_DIR@/KDE" CACHE PATH "Include path for the KActivities-ItemModels library")
set(KACTIVITIES_ITEMMODELS_INCLUDES "${rootDir}/@INCLUDE_INSTALL_DIR@" "@INCLUDE_INSTALL_DIR@/KDE")
set(KACTIVITIES_ITEMMODELS_ONTOLOGIES_DIR "@KACTIVITIES_ITEMMODELS_ONTOLOGIES_DIR@")

# import the exported targets
include(${myDir}/KActivitiesItemModelsLibraryTargets.cmake)

# set the expected library variable
# XXX: only KACTIVITIES_ITEMMODELS_LIBRARIES should be used according to CMake's conventions,
#      KACTIVITIES_ITEMMODELS_LIBRARY is kept for compatibility with all the places using it.
set(KACTIVITIES_ITEMMODELS_LIBRARY kactivities)
set(KACTIVITIES_ITEMMODELS_LIBRARIES kactivities)
